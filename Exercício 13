nota1 = float(input("Digite a primeira nota: "))
nota2 = float(input("Digite a segunda nota: "))
nota3 = float(input("Digite a terceira nota: "))
nota4 = float(input("Digite a quarta nota: "))

media = (nota1 + nota2 + nota3 + nota4) / 4

if media >= 7:
    print(f"Aluno foi aprovado com média: {media}")
else:
    print(f"Aluno foi reprovado no exame com média: {media}")
    notaExame = float(input("Digite a nota do exame: "))
    
    novaMedia = (media + notaExame) / 2
    
    if novaMedia >= 5:
        print(f"Aluno foi aprovado no exame com média: {novaMedia}")
    else:
        print(f"Aluno foi reprovado com média: {novaMedia}")
